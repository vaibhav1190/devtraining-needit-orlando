        <script><![CDATA[// Get today's date and time

var rightNow = new GlideDateTime();

//Query NeedIt task table to get the Due records which are old 
var dueRecords = new GlideRecord('x_58872_needit_needit_task');
dueRecords.addQuery('due_date', '<=', rightNow);
dueRecords.addQuery('state', '!=', 3);
dueRecords.query();
//write a log msg for each overdue record
while (dueRecords.next()) {
    gs.info('Overdue NeetIt Task records' + dueRecords.number);
    gs.eventQueue('x_58872_needit.overdueNeedItTask', dueRecords, dueRecords.number, gs.getUserName());
}]]></script>
